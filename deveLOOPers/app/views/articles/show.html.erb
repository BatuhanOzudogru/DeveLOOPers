<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= @article.title %></h1>
  <p class="mt-5"><%= @article.content %></p>

  <div class="mt-10">
    <%= link_to "Back to articles", articles_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium" %>
    <% unless @article.published? %>
      <%= link_to "Edit", edit_article_path(@article), class: "ml-2 rounded-lg py-3 px-5 bg-yellow-600 text-white inline-block font-medium" %>
      <%= link_to "Destroy", @article, method: :delete, data: { confirm: "Are you sure?" }, class: "ml-2 rounded-lg py-3 px-5 bg-red-600 text-white inline-block font-medium" %>
    <% end %>
  </div>
</div>