<div class="flex flex-col mx-auto items-center text-center">
  <h1 class="font-bold text-4xl mt-10">Welcome deveLâˆžPers</h1>
  <p class="mt-5">You can see <%= pluralize(@articles.count, "published article") %> <%= link_to "here", articles_path, class:"text-sky-400 underline" %></p>
</div>
<% if user_signed_in? %>
  <%= link_to "My Profile", user_profile_path(current_user.id), class: "btn btn-primary" %>
<% end %>

<div class="mt-10">
  <h2 class="font-bold text-2xl">Published Articles</h2>
  <ul class="mt-5 space-y-2">
    <% @articles.each do |article| %>
      <li>
        <h3><%= link_to article.title, article_path(article), class: "text-blue-600 underline" %></h3>
        <div>
          <% article.tags.each do |tag| %>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">#<%= tag.name %></span>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<div class="mt-10 text-center">
<% if user_signed_in? %>
  <%= link_to "Add new article", new_article_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
<% end %>
</div>