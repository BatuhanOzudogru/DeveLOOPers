<div class="flex justify-center">
  <div class="flex flex-col mx-auto items-center text-center">
    <h1 class="font-bold text-4xl mt-10"><%= t('welcome') %></h1>
    <p class="mt-5 text-lg"><%= t('see_articles', count: @articles.count) %> <%= link_to t('here'), articles_path, class: "text-sky-400 underline" %></p>

    <% if user_signed_in? %>
      <div class="mt-10 text-center">
        <%= link_to t('add_new_article'), new_article_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
      </div>
      <div class="text-center mt-5">
        <%= link_to t('my_profile'), user_profile_path(current_user.nickname), class: "btn btn-primary inline-block rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
      </div>
    <% end %>
  </div>

  <div class="mt-10 ml-10">
    <h2 class="font-bold text-2xl"><%= t('published_articles') %></h2>
    <ul class="mt-5 space-y-2">
      <% @articles.each do |article| %>
        <li class="border-b border-gray-200 pb-3">
          <h3 class="text-xl font-semibold mb-2"><%= link_to article.title, article_path(article), class: "text-blue-600 underline" %></h3>
          <div>
            <% article.tags.each do |tag| %>
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">#<%= tag.name %></span>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>