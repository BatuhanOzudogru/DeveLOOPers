<h1 class="font-bold text-4xl"><%= t('edit_profile.title') %></h1>

<%= form_with(model: @user, url: user_profile_path(@user), method: :patch) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, t('edit_profile.error')) %> <%= t('edit_profile.prohibited') %></h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t('edit_profile.nickname') %>
    <%= form.text_field :nickname %>
  </div>

  <div class="actions">
    <%= form.submit t('edit_profile.update_profile'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to t('edit_profile.back_to_profile'), user_profile_path(@user), class: "btn btn-secondary" %>
